<!DOCTYPE html>
<html>

<head>

	<title>My Contests | CodeManiacs</title>
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" type="text/css" href="/css/sheet.css">
	<link href='https://fonts.googleapis.com/css?family=Sofia' rel='stylesheet'>
	<link rel="stylesheet" type="text/css" href="/css/grid.css">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

</head>

<body>
	<header>
		<% include partials/header %>
	</header>

	<div class="grid-content content small">
		<div class="box">
			<a href="/admin/add" style="font-size: 15px;">ADD PROBLEM</a> |
			<a href="/admin/new-contest" style="font-size: 15px;">HOST NEW CONTEST</a> |
			<a href="/admin/my-contests" style="font-size: 15px;">SHOW/EDIT CONTESTS</a> |
			<a href="/admin/manage-admins" style="font-size: 15px;">MANAGE ADMINS</a>
			<h1 class="title center"> My Contests</h1>
			<hr>
			<table class="table sortable">
				<thead>
					<tr>
						<th><a><i class="fa fa-sort" aria-hidden="true"></i> Code</a></th>
						<th><a><i class="fa fa-sort" aria-hidden="true"></i> Name</a></th>
						<th><a><i class="fa fa-sort" aria-hidden="true"></i> Starting At</a></th>
						<th><a><i class="fa fa-sort" aria-hidden="true"></i> Duration (minutes)</a></th>
						<th><a><i class="fa fa-sort" aria-hidden="true"></i> Publicly visibility</a></th>
						<th></th>
					</tr>
				</thead>
				<tbody id="show-all-contests">
					<% for(var i = 0; i < data.length; i++) {%>
					<tr>
						<td>
							<%= data[i].code %>
						</td>
						<td>
							<%= data[i].name %>
						</td>
						<td>
							<%= data[i].D %>
						</td>
						<td>
							<%= data[i].duration %>
						</td>
						<td>
							<%= data[i].visible %>
						</td>
						<td>
							<form method="POST" action="/admin/dlt_contest/<%= data[i].code %>">
								<a href="/admin/edit-contest/<%= data[i].code %>"><button type="button"
										class="btn btn-success btn-sm">EDIT</button></a>
								<button type="submit" class="btn btn-danger btn-sm">DELETE</button>
							</form>
						</td>
					</tr>
					<% } %>
				</tbody>
			</table>
		</div>
	</div>

	<footer>
		<% include partials/footer %>
	</footer>
</body>
<script>
	var URL = window.location.href;
	var msg = URL.split("?")[1];
	if (msg !== "") {
		const probCode = msg.split("_")[0];
		const res = msg.split("_")[1];
		window.alert("Editing problem " + probCode + " " + res);
	}
</script>

</html>